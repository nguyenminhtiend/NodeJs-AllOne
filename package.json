{
  "name": "node-js-all-one",
  "version": "1.0.0",
  "description": "NodeJS all in one",
  "main": "app.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "db:migrate": "sequelize --options-path ./src/db/config/sequelize.js db:migrate",
    "test": "NODE_ENV=test mocha test/setup test/**/*.spec.js --exit",
    "db:test-create": "NODE_ENV=test sequelize --options-path ./src/db/config/sequelize.js db:create",
    "db:test": " npm run db:test-create && NODE_ENV=test sequelize --options-path ./src/db/config/sequelize.js db:migrate",
    "docker-build": "docker build -t nodejs-all-one .",
    "docker-run": "docker run -p 5000:5000 -d nodejs-all-one"
  },
  "author": "Tien Nguyen <nguyenminhtiend@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nguyenminhtiend/NodeJs-AllOne.git"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.19.0",
    "config": "^3.2.2",
    "cors": "2.8.5",
    "express": "4.17.1",
    "glob": "7.1.4",
    "helmet": "^3.15.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "8.5.1",
    "moment-timezone": "^0.5.26",
    "ms": "2.1.2",
    "mysql2": "1.7.0",
    "sequelize": "5.17.0",
    "uuid": "3.3.3",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "chai-like": "1.1.1",
    "dotenv": "^8.1.0",
    "eslint": "6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mocha": "6.2.0",
    "nodemon": "1.19.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "sinon": "7.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
