{
  "name": "node-js-all-one",
  "version": "1.0.0",
  "description": "NodeJS all in one",
  "main": "app.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/app.js",
    "start": "NODE_ENV=production node src/app.js",
    "db:migrate": "sequelize --options-path ./src/db/config/sequelize.js db:migrate",
    "test": "NODE_ENV=test mocha test/setup test/**/*.spec.js --exit",
    "db:test": "NODE_ENV=test sequelize db:create && sequelize db:migrate",
    "lint": "eslint .",
    "docker-build": "docker build -t nodejs-all-one .",
    "docker-run": "docker run --rm -it -p 5001:5000 -d nodejs-all-one"
  },
  "author": "Tien Nguyen <nguyenminhtiend@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nguyenminhtiend/NodeJs-AllOne.git"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.18.3",
    "config": "^3.2.2",
    "cors": "2.8.4",
    "dateformat": "3.0.3",
    "express": "4.16.3",
    "glob": "7.1.2",
    "helmet": "^3.15.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "8.2.1",
    "moment-timezone": "^0.5.26",
    "ms": "2.1.1",
    "mysql2": "1.5.3",
    "sequelize": "^5.12.3",
    "uuid": "3.2.1",
    "validator": "9.4.1",
    "winston": "3.0.0-rc5"
  },
  "engines": {
    "node": ">=8.5"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-http": "4.2.0",
    "chai-like": "1.1.1",
    "dotenv": "^8.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "6.0.2",
    "nodemon": "1.17.5",
    "sinon": "6.1.4"
  }
}
